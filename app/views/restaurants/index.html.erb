<div class = 'index-background'>
  <div class = 'container'>
    <p id="notice"><%= notice %></p>

    <h1>Restaurants</h1>

    <table>
      <thead class="card">
        <tr>
          <th class = 'top-bar'></th>
          <th class = 'top-bar'>Name</th>
       
          <th class = 'top-bar'>Price</th>
          <th class = 'top-bar'>Category</th>
          <th class = 'top-bar'>Link</th>
          <th class = 'top-bar'>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="card">
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= image_tag restaurant.thumb_image, class: 'index-picture' %></td>
            <td class = 'table-item'><%= restaurant.name %></td>
            <td class = 'table-item'><%= restaurant.price %></td>
            <td class = 'table-item'><%= restaurant.category_id %></td>
            <td class = 'table-item'><%= restaurant.link %></td>
            <td class = 'table-item'><%= restaurant.user %></td>
            <td><%= link_to 'Show', restaurant %></td>
            <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
            <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Restaurant', new_restaurant_path %>
  </div>
</div>